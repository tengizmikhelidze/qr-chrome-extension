{
  "manifest_version": 3,
  "name": "QR Generator",
  "description": "free QR generator",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "QR Generator",
    "default_icon": "favicon.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "*://*/*"
  ],
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
